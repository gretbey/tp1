<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias type="lt.vu.mybatis.model.Team" alias="Team"/>
        <typeAlias type="lt.vu.mybatis.model.Player" alias="Player"/>
        <typeAlias type="lt.vu.mybatis.model.Courier" alias="Courier"/>
        <typeAlias type="lt.vu.mybatis.model.Sender" alias="Sender"/>
        <typeAlias type="lt.vu.mybatis.model.Dispatch" alias="Dispatch"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="MANAGED"/>
            <dataSource type="JNDI">
                <property name="data_source" value="DispatchesDataSource"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mybatis.xml/TeamMapper.xml"/>
        <mapper resource="mybatis.xml/PlayerMapper.xml"/>
        <mapper resource="mybatis.xml/SenderMapper.xml"/>
        <mapper resource="mybatis.xml/CourierMapper.xml"/>
        <mapper resource="mybatis.xml/DispatchMapper.xml"/>
    </mappers>
</configuration>
